#include "asm.h"

static inline char	get_lexeme_type(t_env *env, t_token *tok)
{
	unsigned int	i;
	char			ret;

	i = 0;
	printf("Token type = %d\n", tok->type);
	while (i < NB_LEX_FUNCS)
	{
		ret = g_lex_fts[i](env, tok);
		printf("ret = %d\n", ret);
		if (ret == -1)
			return (-1);
		if (ret > TOK_NONE)
			return (ret);
		i++;
	}
	return (0);
}

static inline int	load_lexeme(t_env *env, unsigned int lex, char type, t_token **tok)
{
	static int		(*load_lex_fts[NB_LEX_LOAD_FUNCS])(t_env*, t_lexem*, t_token**) = {
					&load_lex_name_prop,
					&load_lex_comment_prop,
					&load_lex_label,
					&load_lex_opcode};
	unsigned int	i;
	int				depth;

	i = 1;
	depth = 0;
	while (i < LEX_MAX)
	{
		if ((char)i == type && (depth = load_lex_fts[i - 1](env, &env->lexemes[lex], tok)) == -1)
			return (-1);
		if (depth > 0)
			break ;
		i++;
	}
	printf("Depth = %d\n", depth);
	while ((*tok) && depth > 0)
	{
		(*tok) = (*tok)->next;
		depth--;
	}
	return (depth > 0 ? -1 : 0);
}

int		lexer(t_env *env)
{
	t_token			*tmp;
	unsigned int	lex;
	char			ret;

	lex = 0;
	tmp = env->tokens;
	if (!(env->lexemes = (t_lexem*)malloc(sizeof(t_lexem) * env->nb_tokens)))
		return (-1);
	ft_memset(env->lexemes, 0, sizeof(t_lexem) * env->nb_tokens);
	while (tmp)
	{
		if ((ret = get_lexeme_type(env, tmp)) <= LEX_NONE)
		{
			printf("Error\n");
			// unex token
			return (-1);
		}
//		printf("Lexeme %u : %d\n", lex, ret);
		if (load_lexeme(env, lex, ret, &tmp) != 0)
			return (-1);
		printf("Token type 2 = %d\n", tmp->type);
		lex++;
	}
	return (0);
}
